<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_adapter_img"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_adapter_text"
                android:layout_width="151dp"
                android:layout_height="78dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/id_adapter_allergy"
                android:layout_width="66dp"
                android:layout_height="54dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="50dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/id_adapter_money"
                android:layout_width="53dp"
                android:layout_height="37dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/id_adapter_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:buttonTint="#519FB1"
                android:textColor="#519FB1"
                android:textColorHint="#519FB1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
